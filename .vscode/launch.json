{
    "version": "0.2.0",
    "configurations": [

    
        {
            "name": "Python: TRAIN",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "-job", "TRAIN",
                "-data_path", "${workspaceFolder}/dataset/train",
                "-test_path", "${workspaceFolder}/dataset/test",
                "-model_file", "${workspaceFolder}/logs/model.pth",
                "-log_file", "${workspaceFolder}/logs/logs.csv",
                "-num_epoch", "100",
            ]
        },
        {
            "name": "Python: TEST",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "-job", "TEST",
                "-test_path", "${workspaceFolder}/dataset/test",
                "-results_path", "${workspaceFolder}/results",
                "-model_file", "${workspaceFolder}/logs/model.pth",
            ]
        }

    ]
}
